<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.protice_3.MainActivity">

    <TextView android:id="@+id/textsex" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="20sp" android:text="请选择您的性别!" />

    <RadioGroup android:id="@+id/RadioGroupsex" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/textsex">
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/rbtn1" android:text="男" />
        <RadioButton android:id="@+id/rbtn2" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="女" />
    </RadioGroup>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="20sp" android:id="@+id/textlanguary"
        android:layout_below="@+id/RadioGroupsex" android:text="请选择你喜欢的编程语言" />
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/chbok1" android:text="JAVA" android:layout_below="@+id/textlanguary" />
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/chbok2" android:text="C" android:layout_below="@+id/chbok1" />
    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/chbok3" android:text="Python" android:layout_below="@+id/chbok2" />

</RelativeLayout>
